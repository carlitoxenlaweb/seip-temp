{% trans_default_domain 'workStudyCircle' %}

<style>
    .body {
        font-size: 10px;
    }
    .title_bold {
        font-weight: bold;
    }
    table tr {
        padding: 15px;
    }
</style>
{% block body %}

    <table> 
        <tr>
            <td class="title_bold">{{ "workStudyCircle.form.code"|trans }}</td>
            <td> {{ workStudyCircle.codigo }}</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td class="title_bold">{{ "workStudyCircle.form.nombre"|trans }}</td>
            <td> {{ workStudyCircle.name }}</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td class="title_bold">{{ "workStudyCircle.form.region"|trans }}</td>
            <td>{{ workStudyCircle.region.name }}</td>
            <td class="title_bold">{{ "workStudyCircle.form.complejo"|trans }}</td>
            <td>{{ workStudyCircle.complejo.description}}</td>
        </tr>


    </table>




    <fieldset class="fieldset">
        <legend class="legend" >CÃ­rculo de Estudio y Trabajo&nbsp;</legend>
        <div class="columns">
            <div class="new-row-mobile six-columns six-columns-tablet twelve-columns-mobile">
                <p class="inline-label">
                    <label class="label">{{ "workStudyCircle.form.code"|trans }}</label>
                    {{ workStudyCircle.codigo }}
                </p>
            </div>
            <div class="new-row-mobile six-columns six-columns-tablet twelve-columns-mobile">
                <p class="inline-label">
                    <label class="label">{{ "workStudyCircle.form.nombre"|trans }}</label>
                    {{ workStudyCircle.name }}
                </p>
            </div>
            <div class="new-row-mobile six-columns six-columns-tablet twelve-columns-mobile">
                <p class="inline-label">
                    <label class="label">{{ "workStudyCircle.form.region"|trans }}</label>
                    {{ workStudyCircle.region.name }}
                </p>
            </div>
            <div class="new-row-mobile six-columns six-columns-tablet twelve-columns-mobile">
                <p class="inline-label">
                    <label class="label">{{ "workStudyCircle.form.complejo"|trans }}</label>
                    {{ workStudyCircle.complejo.description}}
                </p>
            </div>
            <div class="new-row-mobile six-columns six-columns-tablet twelve-columns-mobile">
                <p class="inline-label">
                    <label class="label">{{ "workStudyCircle.form.gerenciaFirst"|trans }}</label>
