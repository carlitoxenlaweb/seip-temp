{% extends 'PequivenSEIPBundle:Template:Developer/Common/formLayoutShow.html.twig' %}

{% import 'PequivenSEIPBundle:Template:Developer/Macros/buttons.html.twig' as buttons %}

{% trans_default_domain 'sip' %}

{% block javascripts_base %}
    {{ parent() }}
    <script src="{{  asset('bundles/tecnocreacionesvzlagovernment/template/developer/js/developr.input.js') }}"></script>
{% endblock javascripts_base %}

{% block before_body %}
    {{ contentHeader(
        ("sip.center.name"|trans ),
        ('Requerimieto'|trans({},'messages')),
        ('pequiven.show'|trans({},'messages'))
    )}}
{% endblock %}

{% block body %}
    {% set show = 1 %}

    <fieldset class="fieldset">
        <legend class="legend" >Descripción Requerimiento</legend>
        <div class="columns">
            {% for data in request %}
            <div class="new-row-mobile six-columns six-columns-tablet twelve-columns-mobile">
                <p class="inline-label">
                    <label class="label">Observación</label>                    
                        {{ data.observations }}                    
                </p>
            </div> 
            <div class="new-row-mobile six-columns six-columns-tablet twelve-columns-mobile">
                <p class="inline-label">
                    <label class="label">Categoria</label>
                        {{ labelsObservations[data.categoria - 1].description }}
                </p>
            </div>
            <div ng-controller="SipCenterObservationController"> 
                <div class="new-row-mobile six-columns six-columns-tablet twelve-columns-mobile">
                    <p class="inline-label">
                    <label class="label">Estatus</label>                                            
                            <label style="color:#ffffff;width:80px; border-radius: 15px 15px 15px 15px; font-weight: bold; background:{{color[data.status]}}; border-color:{{color[data.status]}};" align="center" href ng-click="loadTemplateStatus(Status='{{ data.id }}')">
                                &nbsp;{{ labelsStatus[data.status - 1].description }}&nbsp;
                            </label>
                            
                    </p>
                </div>
            </div>
            &nbsp;
            <div class="new-row-mobile six-columns six-columns-tablet twelve-columns-mobile">
                <p class="inline-label">
                    <label class="label">Fecha</label>                    
                        {{ data.fecha | date("d/m/Y")}}                    
                </p>
            </div> 
            {% endfor %}
        </div>
    </fieldset> 

    <fieldset class="fieldset">
    <legend class="legend" >Datos del Centro</legend>
        <div class="columns">
            {% for data in request %}            
            <div class="new-row-mobile six-columns six-columns-tablet twelve-columns-mobile">
                <p class="inline-label">
                    <label class="label">Codigo Centro</label>                    
                        {{ data.codigoCentro }}                    
                </p>
            </div> 
            <div class="new-row-mobile six-columns six-columns-tablet twelve-columns-mobile">
                <p class="inline-label">
                    <label class="label">Centro</label>                    
                        {{ data.centro }}                    
                </p>
            </div>  
            <div class="new-row-mobile six-columns six-columns-tablet twelve-columns-mobile">
                <p class="inline-label">
                    <label class="label">Centro</label>                    
                        {{ data.centro }}                    
                </p>
            </div> 
            <div class="new-row-mobile six-columns six-columns-tablet twelve-columns-mobile">
                <p class="inline-label">
                    <label class="label">Municipio</label>                    
                        {{ data.municipio }}                    
                </p>
            </div>           
            <div class="new-row-mobile six-columns six-columns-tablet twelve-columns-mobile">
                <p class="inline-label">
                    <label class="label">Parroquia</label>                    
                        {{ data.parroquia }}                    
                </p>
            </div> 
            {% endfor %}
        </div>
    </fieldset> 
{% endblock %}

{% block javascript %}    
{% endblock %}

