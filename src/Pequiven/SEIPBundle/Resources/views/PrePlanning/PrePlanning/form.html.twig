{% extends "PequivenSEIPBundle:Template:ExtJs/layout.html.twig" %}

{% trans_default_domain 'PequivenSEIPBundle' %}
{% block stylesheet %}
    <style>
        .x-grid-tree-node-expanded .x-tree-icon-parent {
            background-image: none;
        }
        
    </style>
{% endblock stylesheet  %}
    

{% block javascript %}
    {{ parent() }}
    <script type="text/javascript">
        Ext.Loader.setConfig({
            enabled: true
        });Ext.Loader.setPath('Ext.ux', '../ux');

        Ext.require([
            'Ext.data.*',
            'Ext.grid.*',
            'Ext.tree.*',
            'Ext.tip.*',
            'Ext.ux.CheckColumn'
        ]);

        Ext.onReady(function() {
            Ext.tip.QuickTipManager.init();

            var store = Ext.create('Ext.data.TreeStore', {
                model: 'Pequiven.SEIPBundle.Entity.PrePlanning.PrePlanning',
                proxy: {
                    type: 'ajax',
                    //the store will get the content from the .json file
                    url: 'get-pre-planning.json'
                    {#api: {
                        create: 'createPersons',
                        read: 'get-pre-planning.json',
                        update: 'updatePersons',
                        destroy: 'destroyPersons'
                    }#}
                },
                folderSort: true,
            });
            var btnDelete = Ext.create("Ext.Button", {
                handler: function () {
                    if (tree.getSelectionModel().hasSelection()) {
                        var selectedNodes = tree.getSelectionModel().getSelection();
                        var i = 0;
                        for(i=0; i < selectedNodes.length; i++){
                            console.log(selectedNodes[i].id);
                            console.log(selectedNodes);
                            if(selectedNodes[i].childNodes.length){
                                Ext.Msg.alert("", "No selected item.");
                            }
                        }
                        Ext.Msg.confirm('Eliminar', '¿Desea eliminar '+i+' items?<br/>Recuere que al eliminar un objetivo, se eliminaran los items asociados.', function(btn){
                            console.log(btn);
                           if(btn === 'yes'){
                               //some code
                           }
                           else{
                              //some code
                           }
                         });
                    } else {
                        Ext.Msg.alert("", "No hay items selecionados.");
                    }
                },
                iconCls: 'icon-delete',
                glyph :'xf002@FontAwesome',
                text: 'Delete',
                disabled: true,
                itemId: 'btnDelete',
            });
            
            //Ext.ux.tree.TreeGrid is no longer a Ux. You can simply use a tree.TreePanel
            var tree = Ext.create('Ext.tree.Panel', {
                title: 'Planificación 2015',
{#                width: 700,#}
                height: 500,
                renderTo: Ext.getBody(),
                collapsible: false,
                useArrows: true,
                rootVisible: false,
                store: store,
                multiSelect: true,
                listeners: {
                    itemclick:{
                        fn: function(view, record, item, index, e){
{#                            console.log(record.get('id'));#}
                            if (tree.getSelectionModel().hasSelection()) {
                                btnDelete.setDisabled(false);
                                var selectedNode = tree.getSelectionModel().getSelection();
{#                                console.log(selectedNode);#}
                            } else {
                                btnDelete.setDisabled(true);
                            }
                        }
                    }
                },
                dockedItems: [{
                    xtype: 'toolbar',
                    items: [{
                        iconCls: 'icon-add',
                        text: 'Iniciar planificación',
                        scope: this,
{#                        handler: this.onAddClick#}
                    }, btnDelete,{
                        itemId: 'refreshBtn',
                            text: '{{ "pequiven_seip.buttons.refresh"|trans }}',
                            iconCls: 'icon-refresh',
                            xtype: 'button',
                            handler: function(){
                                store.load();
                            }
                       }
                    ]
                }],
                columns: [{
                    xtype: 'treecolumn', //this is so we know which column will show the tree
                    text: 'Nombre',
                    sortable: false,
                    dataIndex: 'name',
                    flex: 1
                }]
            });
            
            store.load();
        });
    </script>
{% endblock javascript %}