{% trans_default_domain 'PequivenSEIPBundle' %}

<div class="block">
    <div class="block-title">
        <h3> {{ 'pequiven_seip.product_planning.product_planning'|trans }}&nbsp;({{ product_report.productPlannings|length }})</h3>
        <div class="button-group absolute-right compact">
            <a class="button icon-list-add" href="{{ path('pequiven_product_planning_create',{productReport: product_report.id}) }}" title="{{ 'pequiven.goals.goals'|trans }}">{{ 'pequiven.add'|trans({},'messages') }}</a>
        </div>
    </div>
    <div class="with-padding">
        <table class="simple-table responsive-table tables-extras" id="sorting-example2">
            <thead>
                <tr>
                    <th scope="col" width="20%">{{ 'Month'|trans }}</th>
                    <th scope="col" width="20%" class="hide-on-mobile-portrait">{{ 'Total month'|trans }}</th>
                    <th scope="col" width="20%" class="hide-on-tablet">{{ 'Design capacity'|trans }}</th>
                    <th scope="col" width="20%" class="hide-on-tablet">{{ 'Days stops'|trans }}</th>
                    <th scope="col" width="20%">&nbsp;</th>
                </tr>
            </thead>
            {% set colspan = 6 %}
            <tbody>

                {% for productPlanning in product_report.productPlannings %}
                    <tr>
                        <td>{{ loop.index }} - 
                            {{ generateLink(productPlanning) }}
                        </td>
                        <th scope="row">
                            {{ productPlanning.totalMonth }}&nbsp;{{ product_report.productUnit }}
                        </th>
                        <td>{{ productPlanning.designCapacity }}&nbsp;{{ product_report.productUnit }}</td>
                        <td>#{{ productPlanning.daysStops|length }}</td>
                        <td class="low-padding align-center">
                            <a href="{{ path("pequiven_product_planning_update",{id: productPlanning.id}) }}" class="button compact icon-pencil">{{ "pequiven_seip.actions.edit"|trans }}</a>
                        </td>
                    </tr>
                {% else %}
                    <tr >
                        <td colspan="{{ colspan }}" class="empty_row">
                            {{ "empty.product_planning"|trans }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        
    </div>
</div>