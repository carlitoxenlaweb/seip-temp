{% trans_default_domain 'PequivenSEIPBundle' %}

{% import 'PequivenSEIPBundle:Template:Developer/Macros/buttons.html.twig' as buttons %}

{% set message = ("pequiven_seip.consumer_planning_service.question.delete"|trans) %}

<div class="block">
    <div class="block-title">
        <h3> {{ 'Services'|trans }}&nbsp;({{ consumer_planning_service.detailConsumerPlanningServices|length }})</h3>
        <div class="button-group absolute-right compact">
            <a class="button icon-list-add" href="{{ path("pequiven_detail_consumer_planning_service_create",{consumerPlanningService:consumer_planning_service.id}) }}">{{ 'pequiven.add'|trans({},'messages') }}</a>
        </div>
    </div>
    <div class="with-padding">
        <table class="simple-table responsive-table tables-extras" id="sorting-example2">
            <thead>
                <tr>
                    <th scope="col" width="10%">{{ 'Month'|trans }}</th>
                    <th scope="col" width="10%" class="hide-on-mobile-portrait with-tooltip" title="{{ 'pequiven_seip.totalPlan'|trans }}">{{ 'pequiven_seip.headers.totalPlan'|trans }}</th>
                    <th scope="col" width="10%" class="hide-on-tablet with-tooltip" title="{{ 'pequiven_seip.totalReal'|trans }}">{{ 'pequiven_seip.headers.totalReal'|trans }}</th>
                    <th scope="col" width="10%" class="hide-on-tablet with-tooltip" title="{{ 'pequiven_seip.percentage'|trans }}">{{ 'pequiven_seip.headers.percentage'|trans }}</th>
                    <th scope="col" width="10%">&nbsp;</th>
                </tr>
            </thead>
            {% set colspan = 9 %}
            <tbody>
                {% set unit = consumer_planning_service.service.serviceUnit %}
                {% set totals = consumer_planning_service.getTotalToDay %}
                {% for detail in consumer_planning_service.detailConsumerPlanningServices %}
                    {% set tableIdRow = "row-detail-"~detail.id %}
                    <tr id="{{ tableIdRow }}">
                        <th scope="row">{{ loop.index }} - 
                            {{ detail|trans }}
                        </th>
                        <td>{{ detail.totalPlan|myNumberFormat }}&nbsp;{{ unit }}</td>
                        <td>{{ detail.totalReal|myNumberFormat }}&nbsp;{{ unit }}</td>
                        <td>{{ detail.percentage|myNumberFormat }}&nbsp;%</td>
                        <td class="low-padding align-center">
                            <p class="button-height">
                                <span class="button-group">
                                    <a href="{{ path("pequiven_detail_consumer_planning_service_update",{id: detail.id}) }}" class="button icon-pencil">{{ "pequiven_seip.actions.edit"|trans }}</a>
                                    {% set deleteUrl = path("pequiven_detail_consumer_planning_service_delete",{id: detail.id}) %}
                                    {{ buttons.delete_mini(deleteUrl,message,tableIdRow) }}
                                </span>
                            </p>
                        </td>
                    </tr>
                {% else %}
                    <tr >
                        <td colspan="{{ colspan }}" class="empty_row">
                            {{ "empty.no_details_service"|trans }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <th scope="col" width="10%">{{ 'Total month before'|trans }}&nbsp;{{ totals['total_month_before']|myNumberFormat }}&nbsp;{{ unit }}</th>
                    <th scope="col" width="10%" class="hide-on-mobile-portrait with-tooltip" title="{{ 'pequiven_seip.totalPlan'|trans }}">{{ totals['tp']|myNumberFormat }}&nbsp;{{ unit }}</th>
                    <th scope="col" width="10%" class="hide-on-tablet with-tooltip" title="{{ 'pequiven_seip.totalReal'|trans }}">{{ totals['tr']|myNumberFormat }}&nbsp;{{ unit }}</th>
                    <th scope="col" width="10%" class="hide-on-tablet with-tooltip" title="{{ 'pequiven_seip.percentage'|trans }}">{{ totals['percentage']|myNumberFormat }}&nbsp;{{ unit }}</th>
                    <th scope="col" width="10%">&nbsp;</th>
                </tr>
            </tfoot>
        </table>
        
    </div>
</div>