{% extends 'PequivenSEIPBundle:Template:Developer/Common/formLayoutShow.html.twig' %}

{% trans_default_domain 'PequivenSEIPBundle' %}

{% block before_body %}
    {{ contentHeader(
        {(path('pequiven_report_template_vizualice')):("Product Report"|trans)},("pequiven_seip.visualizePnrTime.reportPnr"|trans )
    ) }}
{% endblock %}

{% block body %}


    <fieldset class="fieldset">
        <legend class="legend">Informacion</legend>
        <div class="columns">
            <div class="new-row-mobile six-columns six-columns-tablet twelve-columns-mobile">
                <p class="inline-label">
                    <label class="label">{{ "Product" |trans }}</label>
                    {{ product.getname }}
                </p>
            </div>
            <div class="new-row-mobile six-columns six-columns-tablet twelve-columns-mobile">
                <p class="inline-label">
                    <label class="label">{{ "Fecha de consulta" |trans }}</label>
                    {{ dateReport|date('d/m/Y') }}
                </p>
            </div>
            <div class="new-row-mobile six-columns six-columns-tablet twelve-columns-mobile">
                <p class="inline-label">
                    <label class="label">{{ "Plant" |trans }}</label>
                    {{ reportTemplate.name }}
                </p>    
            </div>
        </div>
    </fieldset>

    <fieldset class="fieldset">
        <legend class="legend">Detalle</legend>
        <p class="inline-label">

        <table class="simple-table responsive-table" id="">
            <thead>
                <tr>
                    <th scope="col">{{ 'pequiven_seip.cause_of_PNR' | trans }}</th>
                    <th scope="col" width="23%" class="">{{ "Day" | trans }}</th>
                    <th scope="col" width="23%" class="">{{ "Month" | trans }}</th>
                    <th scope="col" width="23%" class="">{{ "Year" | trans }}</th>
                </tr>
            </thead>

            {#<tfoot>
                <tr>
                    <td colspan="5">
                        6 entries found
                    </td>
                </tr>
            </tfoot>#}

            <tbody>
                <!-- CAUSAS INTERNAS -->
                <tr>
                    <th scope="row">
                        <span class="bold">{{ labelsTypesFailsPNR[constant('Pequiven\\SEIPBundle\\Entity\\CEI\\Fail::TYPE_FAIL_INTERNAL')] | trans }}</span>
                    </th>
                    <td colspan="3"></td>
                </tr>
                {% for failInternal in failsInternal %}
                    <tr>
                        <th scope="row">
                            <span>{{ failInternal.name }}</span>
                        </th>
                        <td>{{ result[constant('Pequiven\\SEIPBundle\\Entity\\CEI\\Fail::TYPE_FAIL_INTERNAL')][failInternal.name]['day'] }}</td>
                        <td>{{ result[constant('Pequiven\\SEIPBundle\\Entity\\CEI\\Fail::TYPE_FAIL_INTERNAL')][failInternal.name]['month'] }}</td>
                        <td>{{ result[constant('Pequiven\\SEIPBundle\\Entity\\CEI\\Fail::TYPE_FAIL_INTERNAL')][failInternal.name]['year'] }}</td>
                    </tr>
                {% endfor %}
                <tr>
                    <td colspan="4"></td>
                </tr>
                
                <!-- CAUSAS EXTERNAS -->
                <tr>
                    <th scope="row">
                        <span class="bold">{{ labelsTypesFailsPNR[constant('Pequiven\\SEIPBundle\\Entity\\CEI\\Fail::TYPE_FAIL_EXTERNAL')] | trans }}</span>
                    </th>
                    <td colspan="3"></td>
                </tr>
                {% for failExternal in failsExternal %}
                    <tr>
                        <th scope="row">
                            <span>{{ failExternal.name }}</span>
                        </th>
                        <td>{{ result[constant('Pequiven\\SEIPBundle\\Entity\\CEI\\Fail::TYPE_FAIL_EXTERNAL')][failExternal.name]['day'] }}</td>
                        <td>{{ result[constant('Pequiven\\SEIPBundle\\Entity\\CEI\\Fail::TYPE_FAIL_EXTERNAL')][failExternal.name]['month'] }}</td>
                        <td>{{ result[constant('Pequiven\\SEIPBundle\\Entity\\CEI\\Fail::TYPE_FAIL_EXTERNAL')][failExternal.name]['year'] }}</td>
                    </tr>
                {% endfor %}
                <tr>
                    <td colspan="4"></td>
                </tr>
                
                <!-- CAUSAS INTERNAS MP -->
                <tr>
                    <th scope="row">
                        <span class="bold">{{ labelsTypesFailsPNR[constant('Pequiven\\SEIPBundle\\Entity\\CEI\\Fail::TYPE_FAIL_INTERNAL_MP')] | trans }}</span>
                    </th>
                    <td colspan="3"></td>
                </tr>
                {% if rawMaterials[constant('Pequiven\\SEIPBundle\\Entity\\CEI\\Fail::TYPE_FAIL_INTERNAL_MP')]|length > 0 %}
                    {% for key in rawMaterials[constant('Pequiven\\SEIPBundle\\Entity\\CEI\\Fail::TYPE_FAIL_INTERNAL_MP')]|keys %}
                        <tr>
                            <th scope="row">
                                <span class="bold">{{ key }}</span>
                            </th>
                            <td colspan="3"></td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <th scope="row">
                            <span class="bold">{{ 'Ninguna' | trans }}</span>
                        </th>
                        <td>0</td>
                        <td>0</td>
                        <td>0</td>
                    </tr>
                {% endif %}
                <tr>
                    <td colspan="4"></td>
                </tr>
                
                <!-- CAUSAS EXTERNAS MP -->
                <tr>
                    <th scope="row">
                        <span class="bold">{{ labelsTypesFailsPNR[constant('Pequiven\\SEIPBundle\\Entity\\CEI\\Fail::TYPE_FAIL_EXTERNAL_MP')] | trans }}</span>
                    </th>
                    <td colspan="3"></td>
                </tr>
                {% if rawMaterials[constant('Pequiven\\SEIPBundle\\Entity\\CEI\\Fail::TYPE_FAIL_EXTERNAL_MP')]|length > 0 %}
                    {% for key in rawMaterials[constant('Pequiven\\SEIPBundle\\Entity\\CEI\\Fail::TYPE_FAIL_EXTERNAL_MP')]|keys %}
                        <tr>
                            <th scope="row">
                                <span class="bold">{{ key }}</span>
                            </th>
                            <td colspan="3"></td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <th scope="row">
                            <span class="bold">{{ 'Ninguna' | trans }}</span>
                        </th>
                        <td>0</td>
                        <td>0</td>
                        <td>0</td>
                    </tr>
                {% endif %}
                <tr>
                    <td colspan="4"></td>
                </tr>
            </tbody>
        </table>

    </p>
    <form id="frmPnr" action="{{ path("pequiven_report_template_visualize_pnr_time",{idProduct:productReport.product.id,idReportTemplate: (productReport.plantReport.reportTemplate.id),idProductReport: (productReport.id),dateReport: (dateReport|date('d/m/Y'))}) }}" method="POST">
        <input type="hidden" name="exportExcel" id="exportExcel" value="0">
    </form>
    {% if is_granted(['ROLE_SEIP_OPERATION_EXPORT_EXCEL_PRODUCTION_PNR_BY_TIME']) %}
        <p class="button-height float-right">
            <a id="btnExportToExcelPnr" href="#" class="button">
                <span class="button-icon"><span class="icon-download"></span></span>
                    {{ "pequiven_seip.buttons.export_xls"|trans }}
            </a>
        </p>
    {% endif %}
</fieldset>
{% endblock%}

{% block javascript %}
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnExportToExcelPnr").click(function () {
                $("#exportExcel").val("1");
                $("#frmPnr").submit();
            });
        });
    </script>
{% endblock %}