                                    <th class=" header">{{ real_acumulated|myNumberFormat }}</th>
                                    <th class=" header">{{ total_percentage|myNumberFormat }}%</th>
                                    <th class=" header">{{ sub_total_pnr|myNumberFormat }}</th>
                                </tr>
                                {% set plan_month_acumulated = 0 %}
                                {% set plan_acumulated = 0 %}
                                {% set real_acumulated = 0 %}
                            {% endif %}
                        {% endif %}
                        
                    {% endfor %}
                </tbody>
                {% set current_percentage = tools.calculatePercentaje(total_plan_acumulated,total_real_acumulated) %}
                {% set current_pnr = tools.calculatePnr(total_plan_acumulated,total_real_acumulated) %}
                <tfoot>
                    <tr>
                        <th class="header">TOTALES</th>
                        <th class="header">{{ total_plan_month|myNumberFormat }}</th>
                        <th class="header">{{ total_plan_acumulated|myNumberFormat }}</th>
                        <th class=" header">{{ total_real_acumulated|myNumberFormat }}</th>
                        <th class=" header">{{ current_percentage|myNumberFormat }}%</th>
                        <th class=" header">{{ current_pnr|myNumberFormat }}</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    {% endif %}
