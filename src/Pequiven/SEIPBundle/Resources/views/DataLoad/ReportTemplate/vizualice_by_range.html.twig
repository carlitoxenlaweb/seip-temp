                    {% set total_pnr = 0 %}
                {% endif %}
                <tfoot>
                    <tr>
                        <th scope="col" style="width: 7%" class="header">TOTALES</th>
                        <th scope="col" style="width: 7%" class="header">{{ total_plan|myNumberFormat }}</th>
                        <th scope="col" style="width: 7%" class=" header">{{ total_real|myNumberFormat }}</th>
