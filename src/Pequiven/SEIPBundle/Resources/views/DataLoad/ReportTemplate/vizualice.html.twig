                                    {% set total_day = 0 %}
                                    {% set total_month = 0 %}
                                    {% set total_year = 0 %}

                                    {% set summary_total_day = summary_total_day + current_total_day %}
                                    {% set summary_total_month = summary_total_month + current_total_month %}
                                    {% set summary_total_year = summary_total_year + current_total_year %}
