                                <tr>
                                    <td colspan="4" class="empty_row">{{ "No service planning"|trans }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="columns">
                <div class="twelve-columns-mobile">
                    <table class="simple-table responsive-table responsive-table-on">
