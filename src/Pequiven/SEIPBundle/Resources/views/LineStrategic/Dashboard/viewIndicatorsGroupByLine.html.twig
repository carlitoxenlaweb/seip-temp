<!-- Widgets de los Indicadores Estratégicos de acuerdo a una Línea Estratégica seleccionada -->
{% trans_default_domain 'PequivenSEIPBundle' %}
{% set classColor = 'red-gradient' %}
{% for t in tree %}
    {% set lineStrategic = t['parent'] %}
        {% for indicator in t['child'] %}
            <div class="three-columns six-columns-tablet twelve-columns-mobile new-row-mobile" style="display: inline-block;" ng-controller="DashboardController" ng-init="renderWidgetIndicatorStrategic('{{ indicator.ref }}',{{ data[lineStrategic.ref][indicator.ref]|json_encode() }},'100%','150px')">
{#                <a target="_blank" href="{{ path('pequiven_indicator_show',{id:indicator.id}) }}"><span title="{{ indicator.description }}"><p style="text-align: center;margin-bottom: -5px;"><b>{{ indicator.description|truncate(20) }}</b></p></span></a>#}
                <a target="_blank" href="{{ path('pequiven_indicator_show',{id:indicator.id}) }}"><span title="{{ indicator.description }}"><p style="text-align: center;margin-bottom: -5px;"><b>{{ indicator.summary }}</b></p></span></a>
                <span id="{{ indicator.ref }}"></span>
            </div>
        {% endfor %}
{% endfor %}