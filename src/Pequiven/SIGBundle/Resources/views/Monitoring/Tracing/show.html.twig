<div class="block" ng-controller="MonitoringTracingSigController">	
	<div class="block-title">
        <h3 class="ng-binding">Seguimiento y Eficacia de las Acciones</h3> 
        	<div class="button-group absolute-right compact">
            	<a class="button icon-list-add " href="" ng-click="loadTemplateTracing()" title="">{{ 'pequiven.add'|trans({},'messages')  }}</a>
            </div>                   
    </div>
    <div class="with-padding">
        {% if standardization %}
	       <div class="new-row twelve-columns">                                                 
                <div class="panel panel-default">
                    <div class="panel-heading">        
                        <table id="table_data" class="table table-striped table-bordered" cellspacing="0" width="100%">          
                            <thead>
                                <tr>                                
                                    <th scope="col"  class="header">#</th>                                     
                                    <th scope="col"  class="header">Area o Proceso</th>                                     
                                    <th scope="col"  class="header">Detección</th>                                     
                                    <th scope="col"  class="header">Codigo RNC</th>                                     
                                    <th scope="col"  class="header">Tipo de NC</th>                                     
                                    <th scope="col"  class="header">Descripción</th>                                     
                                    <th scope="col"  class="header">Tratamiento</th>                                     
                                    <th scope="col"  class="header">Estatus</th>                                     
                                    <th scope="col"  class="header"></th>                                     
                                </tr>
                            </thead>
                            <tbody>  
                                {% for dataStandardization in standardization %}
                                    <tr {{ cycle(["even", "odd"], loop.index) }}>
                                        <td width="3%"><B>{{ loop.index }}</B></td>
                                        <td>{{ dataStandardization.area }}</td>
                                        <td>{{ detection[dataStandardization.detection - 1].description }}</td>
                                        <td>{{ dataStandardization.code }}</td>
                                        <td>{{ labelsTypeNc[dataStandardization.type - 1].description }}</td>
                                        <td>{{ dataStandardization.description }}</td>
                                        <td>{{ dataStandardization.arrangementProgram }}</td>                            
                                        <td><B>{{ status[dataStandardization.status] }}</B></td>
                                        <th class="align-right vertical-center" width="8%">  
                                            {% if dataStandardization.status == 0 %}
                                                <a href  class="button icon-pencil with-tooltip" title="Editar"></a>
                                                <a href="{{ path('pequiven_sig_monitoring_notification',{'id':dataStandardization.id, 'idManagement': data.id })}}" class="button icon-bell with-tooltip" title="Notificar"></a>
                                                <a href ng-click="removeStandardization(dataMonitoring='{{ dataStandardization.id }}')" class="button icon-trash with-tooltip confirm" title="Eliminar"></a>                                            
                                            {% endif %}
                                        </th>                        
                                    </tr>                                    
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>                 
        {% else %}
        <div class="new-row twelve-columns empty_row" align="center">
			<br>No hay Carga                                
        {% endif %}
		</div> 
	</div>
</div>

