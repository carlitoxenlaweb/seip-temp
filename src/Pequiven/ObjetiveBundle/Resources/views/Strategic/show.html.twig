    {{ buttons.generic(path('arrangementprogram_update', { 'id': entity.id }),('pequiven.edit'|trans({},'messages'))) }}
    {{ buttons.delete(path('arrangementprogram_delete', { 'id': entity.id })) }}
</p>#}

{% endblock %}

