        function displayGerenciaFromComplejo(){
            if(inputHiddenRoleName.val() === 'ROLE_DIRECTIVE' || inputHiddenRoleName.val() === 'ROLE_DIRECTIVE_AUX' ){
                var data = {
                    complejos: $.trim(selectComplejo.val()),
                };
