        //Función que actualiza el select de indicadores en caso de que se cambie la lína estratégica o se agregue un nuevo indicador a partir de este formulario
        function chargeSelectIndicator(mode){
            var data = {
                refParentId: $.trim(inputRef.val())
            };
            $.ajax({
                type: 'post',
                url: '{{ path("select_indicatorTacticFromRefParent") }}',
                data: data,
                success: function(data) {
                    $('#pequiven_objetive_tactic_registration_indicators option[value]').remove();
