        //Función que muestra los objetivos estratégicos de acuerdo a la línea estratégica seleccionada
        function displayObjetiveStrategicFromLineStrategic(){
            var data = {
               lineStrategicId: $.trim(selectLineStrategic.val()),
            };
            $.ajax({
                type: 'post',
                url: '{{ path("select_objetiveStrategicFromLineStrategic") }}',
                data: data,
                success: function(data) {
                    $('#pequiven_objetive_tactic_registration_parents option[value]').remove();
                    $('#pequiven_objetive_tactic_registration_parents option').remove();
                    selectObjetiveStrategic.append('<option></option>');
