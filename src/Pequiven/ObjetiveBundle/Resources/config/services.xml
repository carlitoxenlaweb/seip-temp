    <services>
        <service id="pequiven_objetive.entity.objetive.class" class="Pequiven\ObjetiveBundle\Entity\Objetive">

        </service>
        
        <service id="pequiven_objetive.registration.form.type" class="Pequiven\ObjetiveBundle\Form\Type\RegistrationFormType">
            <tag name="form.type" alias="pequiven_objetive_registration" />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
        
        <!-- Servicio necesario para el RegistrationListener -->
        <service id="pequiven_objetive.form.complejo.listener.registration" class="Pequiven\ObjetiveBundle\Form\EventListener\AddComplejoFieldListener">
            <tag name="kernel.event_subscriber" />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
    </services>
</container>
